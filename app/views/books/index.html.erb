<p id="notice"><%= notice %></p>
<h1>本一覧</h1>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th>カテゴリー</th>
      <th>ページ数</th>
      <th>本のタイプ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.category %></td>
        <td><%= book.page %></td>
        <td><%= book.format %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '変更', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '新規追加', new_book_path %>
